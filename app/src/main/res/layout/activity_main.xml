<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart_combinedChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart_scatterChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/chart_combinedChart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/chart_scatterChart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_line"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/chart_bar"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_bar2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/chart_line"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

</RelativeLayout>